<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">

    <!-- Part 1 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"

        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Username Text in Center -->
        <TextView
            android:id="@+id/tvNatasha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="natasha_w"
            android:textSize="18sp"
            android:textColor="@color/smd_text_color"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <!-- Menu Icon on Right -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu"
            android:contentDescription="Menu Icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    <!-- Part 2 -->
    <!-- Part 2: Profile Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Profile picture -->
        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:clipToOutline="true" />

        <!-- Username below picture -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natasha West"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/profilePic"
            android:layout_alignStart="@id/profilePic"
            android:layout_marginTop="8dp" />

        <!-- Stats container -->
        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/profilePic"
            android:layout_alignTop="@id/profilePic"
            android:layout_marginStart="32dp"
            android:gravity="center">

            <!-- Posts -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="54"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Followers -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="834"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Following -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="162"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>












    <!-- Part 3: Bio Section (Compact) -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"


        android:paddingBottom="8dp"
        android:background="@android:color/white">

        <!-- Name -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natasha West"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Description with link -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital goodies designer @pixsellz"
            android:textSize="12sp"
            android:layout_below="@id/nameText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textColor="@android:color/black"/>

        <!-- Extra line -->
        <TextView
            android:id="@+id/extraLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everything is designed."
            android:textSize="12sp"
            android:layout_below="@id/descriptionText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>






















    <!-- Part 4: Edit Profile + Highlights -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"/>

        <!-- Highlights Row -->
        <LinearLayout
            android:id="@+id/highlightsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/editProfileBtn"
            android:layout_marginTop="12dp">

            <!-- New (Plus) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/circle_outline"
                    android:scaleType="centerInside"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Friends -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pic13"
                    android:background="@drawable/circle_outline"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Sport -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pic14"
                    android:background="@drawable/circle_outline"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Design -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pic15"
                    android:background="@drawable/circle_outline"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Design"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>














    <!-- Part 5: Tabs (Grid/User) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Grid tab (ACTIVE) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/tabGrid"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/grid"

                android:contentDescription="Grid" />

            <!-- underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A6322A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- User tab (INACTIVE) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/tabUser"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/user"

                android:contentDescription="User" />

            <!-- underline placeholder (transparent) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>















    <!-- Part 7: Photo Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pics5"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pics6"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pics7"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pics8"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pic10"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pic11"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home12"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pic11"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView

                android:layout_width="0dp"
                android:layout_height="133dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/pic12" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/pic13"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
        </LinearLayout>

    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon3"
            android:contentDescription="Icon 0"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon2"
            android:contentDescription="Icon 1"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon1"
            android:contentDescription="Icon 2"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/like1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Icon 3"
            android:scaleType="centerInside"
            android:src="@drawable/icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Default camera icon"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:clipToOutline="true"/>
    </LinearLayout>

</LinearLayout>
