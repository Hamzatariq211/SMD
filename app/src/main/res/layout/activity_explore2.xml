<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <!-- Part 1: Small -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Search input with icon inside -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:singleLine="true"
            android:drawableStart="@drawable/icon2"
            android:drawablePadding="8dp"
            android:imeOptions="actionSearch"
            android:inputType="text"/>
    </LinearLayout>





    <!-- Part 2: Small -->
    <LinearLayout
        android:id="@+id/part2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:weightSum="4"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <!-- Tops: Bold + Underline -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tops"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Tops"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/black"/>
        </LinearLayout>


        <!-- Accounts: reduced opacity -->
        <TextView
            android:id="@+id/accounts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Accounts"
            android:textColor="@android:color/black"
            android:alpha="0.5"
            android:gravity="center"/>

        <!-- Tags: reduced opacity -->
        <TextView
            android:id="@+id/tags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tags"
            android:textColor="@android:color/black"
            android:alpha="0.5"
            android:gravity="center"/>

        <!-- Places: reduced opacity -->
        <TextView
            android:id="@+id/places"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Places"
            android:textColor="@android:color/black"
            android:alpha="0.5"
            android:gravity="center"/>

    </LinearLayout>














    <!-- Part 3: Instagram-style search results -->
    <RelativeLayout
        android:id="@+id/part3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@android:color/white">

        <!-- Container: vertical stack -->
        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hash"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside"
                android:padding="6dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textSize="14sp"
                        android:textColor="#777" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hash"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside"
                android:padding="6dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#internshala"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000+ posts"
                        android:textSize="14sp"
                        android:textColor="#777" />
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat more rows as needed -->
            <LinearLayout
                android:id="@+id/otheruser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/david"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:clipToOutline="true" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="David"
                        android:textStyle="bold"
                        android:textSize="16sp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>












    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:padding="8dp">


    </LinearLayout>







</LinearLayout>
