<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:maxWidth="280dp">

            <!-- Text Message -->
            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:background="@drawable/chat_bubble_right"
                android:textSize="14sp"
                android:visibility="visible" />

            <!-- Image Message -->
            <ImageView
                android:id="@+id/messageImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners12"
                android:clipToOutline="true"
                android:visibility="gone"
                android:contentDescription="Sent image" />

            <!-- Post Preview -->
            <LinearLayout
                android:id="@+id/postPreview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Œ Shared Post"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to view"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Timestamp and Edited Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/editedIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edited Â· "
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:49 PM"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

