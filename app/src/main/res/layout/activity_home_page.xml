<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".HomePage">

    <!-- Header with Camera, Title, and Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Camera -->
        <ImageView
            android:id="@+id/camera"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/camera"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:contentDescription="Camera" />

        <!-- Socially (Text instead of image) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center"
            android:text="Socially"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/smd_text_color"
            android:fontFamily="@font/rebelton" />

        <!-- IGTV -->
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/igtv"
            android:scaleType="centerInside"
            android:contentDescription="IGTV" />

        <!-- Share -->
        <ImageView
            android:id="@+id/share"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share"
            android:scaleType="centerInside"
            android:contentDescription="Share" />
    </LinearLayout>

    <!-- Stories Row -->
    <LinearLayout
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Your Story (Add Story Button) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/story_container"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/story_ring">

                <ImageView
                    android:id="@+id/story_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:contentDescription="Your Story"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />
            </LinearLayout>

            <ImageView
                android:id="@+id/add_story_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/circle_mask"
                android:layout_alignBottom="@id/story_container"
                android:layout_alignEnd="@id/story_container"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Story"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/story_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>

        <!-- RecyclerView for dynamic stories -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storiesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- Posts Feed RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:clipToPadding="false" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/homebold"
            android:contentDescription="Icon 0"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/exlplore"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon2"
            android:contentDescription="Icon 1"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon1"
            android:contentDescription="Icon 2"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon"
            android:contentDescription="Icon 3"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Default camera icon"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:clipToOutline="true"/>
    </LinearLayout>

</LinearLayout>
