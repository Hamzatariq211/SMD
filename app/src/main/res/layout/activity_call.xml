<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".callScreen">

    <!-- Largest Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center"
        >

        <!-- Rounded Rectangle Picture -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/dm1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_rectangle"
            android:clipToOutline="true"
            android:contentDescription="Profile Picture" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Johnny"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black" />

        <!-- Call Duration -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:01"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>


    <!-- Medium Part -->
    <!-- Medium Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Messenger -->
        <ImageView
            android:id="@+id/ivMessenger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/messenger"
            android:contentDescription="Messenger"
            android:layout_marginHorizontal="24dp" />

        <!-- End Call -->
        <ImageView
            android:id="@+id/ivEndCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/endcall"
            android:contentDescription="End Call"
            android:layout_marginHorizontal="24dp" />

        <!-- Speaker -->
        <ImageView
            android:id="@+id/ivSpeaker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/speaker"
            android:contentDescription="Speaker"
            android:layout_marginHorizontal="24dp" />

    </LinearLayout>



</LinearLayout>
