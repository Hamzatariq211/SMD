<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Post notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Camera and Gallery permissions for profile picture upload -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- New permissions for Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.I210396"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Add meta-data for Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- FileProvider for camera functionality -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".SociallyOtherUser"
            android:exported="true"/>

        <activity
            android:name=".ViewStoryActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".PostDetailActivity"
            android:exported="true" />

        <activity
            android:name=".StoryUploaded"
            android:exported="true" />
        <activity
            android:name=".UploadStory"
            android:exported="true" />
        <activity
            android:name=".Story"
            android:exported="true" />
        <activity
            android:name=".AddPostScreen"
            android:exported="true" />
        <activity
            android:name=".EditProfile"
            android:exported="true" />
        <activity
            android:name=".profileScreen"
            android:exported="true" />
        <activity
            android:name=".likelikePage"
            android:exported="false" />
        <activity
            android:name=".likeFollowing"
            android:exported="true" />
        <activity
            android:name=".callScreen"
            android:exported="true"/>

        <activity
            android:name=".chatScreen"
            android:exported="true" />
        <activity
            android:name=".Messages"
            android:exported="true" />
        <activity
            android:name=".ExploreSearch"
            android:exported="true"/>

        <activity
            android:name=".Explore"
            android:exported="true"/>

        <!-- New activities for followers/following and follow requests -->
        <activity
            android:name=".FollowersFollowingActivity"
            android:exported="true"/>

        <activity
            android:name=".FollowRequestsActivity"
            android:exported="true"/>

        <activity
            android:name=".SwitchAccounts"
            android:exported="true"/>


        <activity
            android:name=".HomePage"
            android:exported="true" />
        <activity
            android:name=".RegisterUser"
            android:exported="false" />
        <activity
            android:name=".loginUser"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>